{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../*"],
      "@compt/*": ["../components/*"],
      "@auth/*": ["../components/auth/*"],
      "@/base/*": ["../components/base/*"],
      "@icons/*": ["../components/icons/*"],
      "@compos/*": ["../composables/*"],
      "@store/*": ["store/*"],
      "@types/*": ["../types/*"],
      "@layouts/*": ["../layouts/*"]
    }
  },

  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "./**/*.vue", "./**/*.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
